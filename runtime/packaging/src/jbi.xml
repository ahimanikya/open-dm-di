<?xml version="1.0"?>
<jbi
    version="1.0"
    xmlns="http://java.sun.com/xml/ns/jbi"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:config="http://www.sun.com/jbi/descriptor/configuration"    
    xmlns:identification="http://www.sun.com/jbi/descriptor/identification"
    xsi:schemaLocation="http://java.sun.com/xml/ns/jbi ./jbi.xsd">
<!-- identification information about this engine -->
    <component type="service-engine">
        <identification>
            <name>sun-etl-engine</name>
            <description>This is a etl service engine.</description>
            <identification:VersionInfo specification-version="${JBI_SPEC_VERSION}" build-number="${BUILD_NUMBER}"/>
        </identification>
        <component-class-name description="ETL SE Component" >com.sun.jbi.engine.etl.ETLSEComponent</component-class-name>
        <component-class-path>
			<path-element>lib/crl.jar</path-element>
           <path-element>lib/etlse.jar</path-element>
           <path-element>lib/componentsl.jar</path-element>
           <path-element>lib/wsdl4j.jar</path-element>
           <path-element>lib/etlengine.jar</path-element>
           <path-element>lib/axiondb.jar</path-element>
           <path-element>lib/etlmonitor.jar</path-element>
           <path-element>lib/commons-codec-1.3.jar</path-element>
           <path-element>lib/commons-logging-1.1.jar</path-element>
           <path-element>lib/commons-primitives-1.0.jar</path-element>
		   <path-element>lib/sbme.jar</path-element>
        </component-class-path>
        <bootstrap-class-name>com.sun.jbi.engine.etl.ETLSEBootstrap</bootstrap-class-name>
        <bootstrap-class-path>
			<path-element>lib/crl.jar</path-element>
           <path-element>lib/etlse.jar</path-element>
           <path-element>lib/componentsl.jar</path-element>
           <path-element>lib/wsdl4j.jar</path-element>
         </bootstrap-class-path>
        <!--config:Configuration version="1.0">
            <config:MaxThreadCount>10</config:MaxThreadCount>
        </config:Configuration-->
		<config:Configuration>
		<config:Property name="MaxThreadCount"
    					displayName="Number of Threads"
            			displayDescription="# of threads executing. Please configure this equal to # CPUs of the system to get max throughput."
            			showDisplay="all"
            			type="xsd:positiveInteger"
            			defaultValue="10">
				        <config:Constraint facet="minInclusive" value="1"/>
				        <config:Constraint facet="maxInclusive" value="100"/>
		    </config:Property>
			<config:Property name="AxiondbInstanceName" 
                            type="xsd:string" 
                            displayName="Axiondb Instance Name" 
                            displayDescription="Axiondb Instance Name" 
                            showDisplay="all"
                            isApplicationRestartRequired="true" 
                            isComponentRestartRequired="true"/>
			<config:Property name="AxiondbWorkingDir" 
                            type="xsd:string" 
                            displayName="Axiondb Working Dir" 
                            displayDescription="Axiondb Working Directory" 
                            showDisplay="all"
                            isApplicationRestartRequired="true" 
                            isComponentRestartRequired="true"/>
			<config:Property name="ProxyUserName" 
                            type="xsd:string" 
                            displayName="Proxy User Name" 
                            displayDescription="A valid proxy user name" 
                            showDisplay="all"
                            isApplicationRestartRequired="true" 
                            isComponentRestartRequired="true"/>
           <config:Property name="ProxyPassword" 
                            type="xsd:string" 
                            displayName="Proxy User Password" 
                            displayDescription="A valid proxy user password" 
                            showDisplay="all"
                            encrypted="true" 
                            isApplicationRestartRequired="true" 
                            isComponentRestartRequired="true"/>
	  </config:Configuration>
    </component>
</jbi>
