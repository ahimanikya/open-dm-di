<?xml version="1.0" encoding="UTF-8"?>
<assembly>
    <id>loader</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>target</directory>
            <outputDirectory>soa2/modules/ext/mdm/bulkloader</outputDirectory>
            <includes>
                <include>bulkloader*.jar</include>
                <include>*.bat</include>
                <include>*.sh</include>
            </includes>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>logger.properties</source>
            <outputDirectory>soa2/modules/ext/mdm/bulkloader/config</outputDirectory>
            <filtered>true</filtered>
        </file>
        <!--
        <file>
            <source>target/bulkloader-1.0.jar</source>
            <outputDirectory>soa2/modules/ext/mdm/bulkloader/lib</outputDirectory>
            <filtered>true</filtered>
        </file>
        -->
    </files>
    <dependencySets>
        <dependencySet>
            <outputDirectory>soa2/modules/ext/mdm/bulkloader/lib</outputDirectory>
            <unpack>false</unpack>
            <scope>runtime</scope>
        </dependencySet>
    </dependencySets>
</assembly>
